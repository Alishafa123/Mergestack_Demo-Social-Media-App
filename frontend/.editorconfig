# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Apply rules to all files
[*]
charset = utf-8
end_of_line = lf          # ensures single LF at end of file
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# Reduce multiple empty lines to 1
# NOTE: EditorConfig itself cannot enforce multiple blank lines. 
# For that, you can use VSCode extension "Trailing Spaces" or "Prettier"
